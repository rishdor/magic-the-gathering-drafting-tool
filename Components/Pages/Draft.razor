@page "/draft/{SetCode}"
@using Models

<PageTitle>Draft</PageTitle>

<h1>Draft</h1>

<button @onclick="OpenPack">Open next booster pack</button>

<h3>Table</h3>
<ul>
    @foreach (Card card in table)
    {
        <li>
            <button @onclick="@(_ => AddCardToDeck(0))">@card.Name</button>
        </li>
    }
</ul>

<h3>Deck</h3>
<ul>
    @foreach (Card card in deck)
    {
        <li>
            <button @onclick="@(_ => RemoveCardFromDeck(0))">@card.Name</button>
        </li>
    }
</ul>