@page "/cards"
@using magick.Models

<style>
    h1 {
        text-align: center;
        font-weight: bold;
        padding: 10px;
    }

    .card-name {
        text-align: center;
        padding: 10px 0 0 0;
        font-size: larger;
    }

    .loading {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 2em;
        font-weight: bold;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
    }

    .card {
        width: calc(20% - 10px);
        max-width: 300px;
        min-width: 200px;
        box-sizing: border-box;
        border: none;
    }

    .card img {
        width: 100%;
        height: auto;
    }

    .load-more-button {
        display: block;
        width: 200px;
        height: 50px;
        margin: 20px auto;
        background-color: #4CAF50;
        color: white;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        transition-duration: 0.4s;
        cursor: pointer;
        border-radius: 12px;
        padding: 14px 40px;
        border: none;
        outline: none;
        padding: 20px 0 40px 0;
    }

    .load-more-button:hover {
        background-color: white; 
        color: black; 
        border: 2px solid #4CAF50;
    }

    footer {
        height: 50px;
    }

    .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .search-container input {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 200px;
    }

    .search-container button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
    }

    .search-container button:hover {
        background-color: #45a049;
    }

    .filter-container {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-bottom: 20px;
    }

    .filter-container select {
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 150px;
    }

    .filter-container button {
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
    }

    .filter-container button:hover {
        background-color: #45a049;
    }
</style>

<h1>Card Gallery</h1>

<div class="search-container">
    <input type="text" @bind="searchQuery" placeholder="Search cards..." />
    <button @onclick="SearchCards">Search</button>
    <button @onclick="ResetSearch">Reset</button>
</div>

<div class="filter-container">
    <select @bind="convertedManaCostFilter">
        <option value="">Select Mana Cost</option>
        <option value="5">5</option>
    </select>
    <select @bind="typeFilter">
        <option value="">Select Type</option>
        <option value="Artifact">Artifact</option>
    </select>
    <select @bind="rarityCodeFilter">
        <option value="">Select Rarity Code</option>
        <option value="C">Common</option>
    </select>
    <select @bind="colorFilter">
        <option value="">Select Color</option>
        <option value="White">White</option>
    </select>
    <button @onclick="SearchCards">Apply Filters</button>
</div>

<div>
    @if (cards == null)
    {
        <p class="loading">Loading...</p>
    }
    else
    {
        <div class="cards-container">
        @foreach (var card in cards)
        {
            <div class="card">
                <CardComponent card="@card" />
            </div>
        }
        </div>
        <button class="load-more-button" @onclick="LoadMoreCards">Load More</button>
        <footer></footer>
    }
</div>